<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/upload_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e3000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$MyFragment">

    <!--Shows Logo-->
    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingBottom="150dp"
        android:src="@drawable/app_logo"
        android:id="@+id/logo"
        android:layout_centerHorizontal="true" />

    <!--Choose picture button-->

    <TextView
        android:id="@+id/choose_picture_text"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/choose_pic"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:gravity="center_horizontal"
        android:paddingBottom="25dp"
        android:paddingTop="10dp"
        android:textSize="20dp"
        android:layout_marginRight="50dp"/>

    <Button
        android:id="@+id/choose_picture_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_above="@id/choose_picture_text"
        android:layout_alignParentRight="true"
        android:background="@drawable/gallery_button"
        android:textSize="14dp"
        android:layout_marginRight="50dp"/>

    <!--Write a story button-->
    <TextView
        android:id="@+id/story_text"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/story"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:paddingBottom="25dp"
        android:paddingTop="12dp"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"/>

    <Button
        android:id="@+id/story_button"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_above="@id/story_text"
        android:layout_alignParentLeft="true"
        android:background="@drawable/story_button"
        android:textSize="14dp"
        android:layout_marginLeft="50dp"/>

</RelativeLayout>
