<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image_upload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e3000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$MyFragment">

    <EditText
        android:id="@+id/title_image"
        android:layout_alignParentTop="true"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="start"
        android:inputType="text"
        android:textColorHint="#c8ffffff"
        android:hint="Title of Post"
        android:textColor="#ffffffff" />

    <Button
        android:id="@+id/upload_image"
        android:background="#ff33b5e5"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@+id/title_image"
        android:text="@string/upload"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/camera_button"
        android:id="@+id/picture"
        android:paddingTop="50dp"
        android:layout_below="@+id/title_image" />

    <TextView
        android:id="@+id/caption_title"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:text="@string/caption"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/caption_text"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:inputType="text"
        android:padding="15dp"
        android:layout_below="@+id/caption_title"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#FFFFFF"/>

    <TextView
        android:id="@+id/enter_location1"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:text="@string/enter_location"
        android:textColor="#FFFFFF"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/caption_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:id="@+id/story_upload_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_below="@+id/enter_location1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
